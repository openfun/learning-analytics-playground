{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./js",
    "esModuleInterop": true,
    "jsx": "preserve",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES6",
      "ScriptHost",
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2020.Intl",
      "ESNext.Intl"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "intl-pluralrules": ["types/libs/intl-pluralrules"]
    },
    "resolveJsonModule": true,
    "strict": true,
    "sourceMap": true,
    "target": "es6"
  },
  "include": [
    "e2e/cypress/integration",
    "e2e/cypress/plugins",
    "e2e/cypress/support",
  ],
  "exclude": ["node_modules"],
}
